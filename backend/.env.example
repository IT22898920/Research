# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/coconut_health_monitor

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/coconut_health_monitor?retryWrites=true&w=majority

# JWT Secret (change this to a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Firebase (for verifying Firebase tokens)
FIREBASE_PROJECT_ID=your-firebase-project-id
